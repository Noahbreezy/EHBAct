<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="organizations.controller.Activities">
    <Page
        id="activitiesPage"
        title="Activities">
        <content>
            <List
                id="activitiesList"
                items="{path: '/Activities'}"
                noDataText="No activities found for this organization."
                itemPress="onActivityPress">
                <StandardListItem
                    id="activitiesListItem"
                    title="{title}"
                    description="{location}" />
            </List>
        </content>
    </Page>
</mvc:View>
